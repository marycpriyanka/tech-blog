<div class="card mb-3 customBorder">
    <div class="card-header header-bg">
        <h5>{{post.title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Created by {{post.user.name}} on {{format_date post.date_created}}
        </h6>
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
</div>

<div class="card customBorder">
    <div class="card-header header-bg">
        Comments
    </div>
    <ul class="list-group list-group-flush">
        {{#each post.comments as |comment|}}
        <li class="list-group-item">
            {{comment.comment_content}}
            <p class="mb-2 text-muted">Created on {{format_date comment.date_created}}</p>
        </li>
        {{/each}}
    </ul>
    <div class="card-footer">
        <form id="commentForm" data-id="{{post.id}}">
            <div class="mb-3">
                <label for="textArea" class="form-label">Add a comment</label>
                <textarea class="form-control" id="textArea" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary header-bg">Submit</button>
        </form>
    </div>
</div>

<script src="/js/addComment.js"></script>